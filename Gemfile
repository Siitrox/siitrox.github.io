source "https://rubygems.org"

# GitHub Pages supported gems
gem "github-pages", group: :jekyll_plugins

# Extra plugins not included in GitHub Pages
gem "jekyll-include-cache"
# Math expression
gem "kramdown-math-katex"
# JS support for theme
gem "duktape"

# Required for Ruby 3.4+ locally
gem "csv"
gem "logger"
gem "base64"

# Must be available during generation
group :jekyll_plugins do
  gem "jekyll-default-layout"
  gem "jekyll-feed"
  gem "jekyll-optional-front-matter"
  gem "jekyll-paginate"
  gem "jekyll-readme-index"
  gem "jekyll-redirect-from"
  gem "jekyll-relative-links"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-titles-from-headings"
  gem "jekyll-last-modified-at"
end

# Remote theme support - only downlaod at build time
gem "jekyll-remote-theme"
